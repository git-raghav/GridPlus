<% layout("/layouts/boilerplate") %>
<div class="row">
	<div class="col-8 offset-2">
		<h3><b>Register New Meter</b></h3>
		<form action="/meters" method="POST" class="new-form needs-validation" novalidate>
			<div class="mb-3">
				<label for="title" class="form-label">Name:</label>
				<input
					type="text"
					id="title"
					name="meter[name]"
					placeholder="Enter name of not more than 2 - 50 characters."
					class="form-control"
					required
					minlength="2"
					maxlength="50"
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter a valid Name.</div>
			</div>
			<div class="mb-3">
				<label for="location" class="form-label">Location:</label>
				<input
					type="text"
					id="location"
					name="meter[location]"
					placeholder="Enter a location of not more than 2 - 150 characters."
					class="form-control"
					required
					minlength="2"
					maxlength="150"
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter a valid location.</div>
			</div>
			<button type="submit" class="btn btn-dark mb-5">Register Meter</button>
		</form>
	</div>
</div>
