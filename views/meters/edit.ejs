<% layout("/layouts/boilerplate") %>
<div class="row">
	<div class="col-8 offset-2">
		<h3><b>Edit Meter</b></h3>
		<form action="/meters/<%= meter._id %>?_method=PUT" method="POST" class="new-form needs-validation" novalidate>
			<div class="mb-3">
				<label for="title" class="form-label">Name:</label>
				<input
					type="text"
					id="title"
					name="listing[name]"
					value="<%= meter.name %>"
					class="form-control"
					required
					minlength="2"
					maxlength="50"
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter a valid Name.</div>
			</div>
			<div class="mb-3">
				<label for="location" class="form-label">Location:</label>
				<input
					type="text"
					id="location"
					name="listing[location]"
                    value="<%= meter.location %>"
					class="form-control"
					required
					minlength="2"
					maxlength="150"
				/>
				<div class="valid-feedback">Looks good!</div>
				<div class="invalid-feedback">Please enter a valid location.</div>
			</div>
			<button type="submit" class="btn btn-dark mb-5">Submit Edited Meter</button>
		</form>
	</div>
</div>
